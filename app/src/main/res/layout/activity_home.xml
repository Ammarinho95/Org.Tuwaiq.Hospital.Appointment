<?xml version="1.0" encoding="utf-8"?>
  <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Home.HomeActivity">

  <TextView
      android:id="@+id/textViewBookAppointment"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="30dp"
      android:layout_marginTop="100dp"
      android:fontFamily="casual"
      android:text="Book Appointment"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textViewMyAppointment"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="100dp"
      android:layout_marginEnd="30dp"
      android:fontFamily="casual"
      android:text="My Appointment"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textViewAppointment"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="34dp"
      android:layout_marginEnd="16dp"
      android:fontFamily="casual"
      android:text="Appointments"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/imageViewViewAppointment"
      android:layout_width="109dp"
      android:layout_height="140dp"
      android:layout_marginEnd="30dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textViewMyAppointment"
      app:srcCompat="@drawable/health__170_" />

  <ImageView
      android:id="@+id/imageViewBook"
      android:layout_width="112dp"
      android:layout_height="139dp"
      android:layout_marginStart="30dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textViewBookAppointment"
      app:srcCompat="@drawable/health__145_" />

</androidx.constraintlayout.widget.ConstraintLayout>